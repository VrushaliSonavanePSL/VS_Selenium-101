<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelSuite" parallel="tests" thread-count="4">

    <test name="Windows10_Chrome">
        <parameter name="platform" value="Windows 10"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="simpleFormDemo.SimpleFormDemoClass"/>
            <class name="inputFormSubmit.InputFormSubmitClass"/>
            <class name="dragAndDropSliders.DragAndDropSlidersClass"/>
        </classes>
    </test>

    <test name="Windows10_Edge">
        <parameter name="platform" value="Windows 10"/>
        <parameter name="browser" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="simpleFormDemo.SimpleFormDemoClass"/>
            <class name="inputFormSubmit.InputFormSubmitClass"/>
            <class name="dragAndDropSliders.DragAndDropSlidersClass"/>
        </classes>
    </test>

    <test name="Linux_Chrome">
        <parameter name="platform" value="Linux"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="simpleFormDemo.SimpleFormDemoClass"/>
            <class name="inputFormSubmit.InputFormSubmitClass"/>
            <class name="dragAndDropSliders.DragAndDropSlidersClass"/>
        </classes>
    </test>

    <test name="Linux_Edge">
        <parameter name="platform" value="Linux"/>
        <parameter name="browser" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="simpleFormDemo.SimpleFormDemoClass"/>
            <class name="inputFormSubmit.InputFormSubmitClass"/>
            <class name="dragAndDropSliders.DragAndDropSlidersClass"/>
        </classes>
    </test>

</suite>
